server {
    listen 443 ssl http2;
    server_name 3dpost.loc www.3dpost.loc *.3dpost.loc;
    root /;
    charset utf-8;
    client_max_body_size 128M;

    location /41c270e4-5535-4daa-b23e-c269744c2f45/ {
        internal;
        alias /;
        try_files $uri $uri/;
    }

    ssl_certificate /Users/Sepehr/.valet/Certificates/3dpost.loc.crt;
    ssl_certificate_key /Users/Sepehr/.valet/Certificates/3dpost.loc.key;

    location / {
        rewrite ^ /Users/Sepehr/.composer/vendor-bin/valet/vendor/laravel/valet/server.php last;
    }

    access_log off;
    error_log /Users/Sepehr/.valet/Log/nginx-error.log;

    error_page 404 /Users/Sepehr/.composer/vendor-bin/valet/vendor/laravel/valet/server.php;

    location ~ \.php$ {
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:/Users/Sepehr/.valet/valet.sock;
        fastcgi_index /Users/Sepehr/.composer/vendor-bin/valet/vendor/laravel/valet/server.php;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME /Users/Sepehr/.composer/vendor-bin/valet/vendor/laravel/valet/server.php;
    }

    location ~ /\.ht {
        deny all;
    }
}
