{
    "require": {
        "consolidation/cgr": "^2.0"
    },
    "scripts": {
        "post-update-cmd": [
            "cgr update"
        ],
        "post-install-cmd": [
            "cgr --stability dev laravel/valet dev-master",

            "cgr psy/psysh",
            "cgr pds/skeleton",
            "cgr sven/forge-cli",

            "cgr behat/behat",
            "cgr codeception/codeception",

            "cgr phpmd/phpmd",
            "cgr phploc/phploc",
            "cgr squizlabs/php_codesniffer",

            "cgr wp-cli/wp-cli",
            "cgr laravel/installer",
            "cgr certly/spark-installer",
            "cgr laravel/lumen-installer",
            "cgr symfony/symfony-installer"
        ]
    }
}
